{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Prevent JavaScript files from being emitted
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.js"] // Exclude existing JS files
}
